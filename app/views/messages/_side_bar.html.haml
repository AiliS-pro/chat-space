.side
  .side__header
    .side__header__top-items
      .side__header__top-items__name
        = current_user.name
      .side__header__top-items__icons
        =link_to new_group_path, class: "side__header__top-items__icons--icon" do
          = icon('far', 'edit', class: "side__header__top-items__icons--icon")
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side__header__top-items__icons--icon")
  .side__list
    - current_user.groups.each do |group|
      .side__list__group-unit
        = link_to '#' do
          .side__list__group-unit--group-name
            = group.name
          .side__list__group-unit--comment-last
